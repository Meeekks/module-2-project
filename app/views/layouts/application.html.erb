<!DOCTYPE html>
<html>
  <head>
    <title>RestfulRestaurants</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>

      Logged in As: <%= current_user.first_name %>
      <%= button_to "LOG OUT", logout_path, :method => :get %>
      <br>
      <br>
      View Profile:<%= button_to "MY PROFILE", user_path(current_user),:method => :get    %>

    </header>

    <%= yield %>
  </body>
</html>
