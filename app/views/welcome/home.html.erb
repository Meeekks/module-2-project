<div class="right-align">
  <a class="waves-effect waves-light btn"><%= button_to "Search", "/", :method => :get%></a>
  <a class="waves-effect waves-light btn"><%= button_to @user.name.upcase, user_path(@user),:method => :get%></a>
  <a class="waves-effect waves-light btn"><%= button_to "LOG OUT", logout_path, :method => :post%></a>
</div>

<div class="containter-mid">
<p>Hi, <%= @user.name %>! <br>
Welcome to RESTful Restaurants!</p>

<div class="center">

<div class="row">
  <div class="col l4 push-l4">

<%= form_tag 'restaurants/results', method: 'post' do %>
  <br>
  <div class="input-field col6">
    <i class="material-icons prefix">youtube_searched_for</i>
    <%= text_field_tag :'search[term]', nil, placeholder: "SEARCH TERM" %>
  </div>
  <div class="input-field col6">
    <i class="material-icons prefix">youtube_searched_for</i>
    <%= text_field_tag :'search[location]', nil, placeholder: "SEARCH LOCATION" %>
  </div>
  <button class="btn waves-effect waves-light" type="submit" name="action"><%= submit_tag "Search" %>
    <i class="material-icons right">send</i>
  </button>
<% end %>

</div>
</div>
</div>
</div>
